{
  "schema": 2,
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "**/*.js",
      "package.json",
      "Dockerfile"
    ]
  },
  "deploy": {
    "startCommand": "node server.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
